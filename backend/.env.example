# Server Configuration
NODE_ENV=development
PORT=5000

# Database
MONGODB_URI=mongodb+srv://username:password@cluster.mongodb.net/edulink?retryWrites=true&w=majority

# Redis
REDIS_URL=redis://default:password@redis-host:port

# JWT Authentication
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_EXPIRES_IN=7d

# Telephony - Africa's Talking
AFRICAS_TALKING_API_KEY=your-api-key-here
AFRICAS_TALKING_USERNAME=sandbox
AFRICAS_TALKING_SENDER_ID=EduLink

# Telephony - Twilio (Backup)
TWILIO_ACCOUNT_SID=your-twilio-account-sid
TWILIO_AUTH_TOKEN=your-twilio-auth-token
TWILIO_PHONE_NUMBER=+1234567890

# AI Service
AI_SERVICE_URL=http://localhost:5001

# Object Storage (for audio files)
AWS_ACCESS_KEY_ID=your-aws-access-key
AWS_SECRET_ACCESS_KEY=your-aws-secret-key
AWS_REGION=us-east-1
AWS_S3_BUCKET=edulink-audio

# Logging
LOG_LEVEL=info

# CORS
CORS_ORIGIN=http://localhost:3000,http://localhost:19006
